<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Mobike.Views.ItemDetailPage" Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Nome:" FontSize="Medium" />
        <Label Text="{Binding Item.Nome}" FontSize="Small" />
        <Label Text="Descricao:" FontSize="Medium" />
        <Label Text="{Binding Item.Descricao}" FontSize="Small" />
        <Label Text="Valor:" FontSize="Medium" />
        <Label Text="{Binding Item.Valor}" FontSize="Small" />
    </StackLayout>
</ContentPage>